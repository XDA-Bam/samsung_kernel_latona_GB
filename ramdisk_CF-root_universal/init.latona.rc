# change permission of ftm_sleep
	chown system system /sys/power/ftm_sleep
	chmod 0664 /sys/power/ftm_sleep
	
# change permission of pm_debug
	chmod 0664 /sys/kernel/debug/pm_debug/voltage/vdd_mpu/vp_errorgain
